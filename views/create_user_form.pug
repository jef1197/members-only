extends layout

block content
  h1= title
  form(method='POST' action='')
    div(class='form-content')
      label(for='username') Username: 
      input#name(type='text' placeholder='username' name='username' required='true' )
      label(for='password') Password: 
      input#name(type='text' placeholder='password' name='password' required='true' )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
